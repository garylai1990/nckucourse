<%= simple_form_for(@exp) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :user_id,
    :input_html => { :value => current_user.id,:class => 'uneditable-input' },
    :as => :hidden %>
    <%= f.label :課程 %>
    <%= f.select :course_id, 
    Course.all.map { |r| [r.name,r.id] }, 
    :include_blank => false %>
    <%= f.label :年度 %>
    <%= f.select :year, 
    :year => [ "100-2", "100-1", "99-2", "99-1", "98-2", "98-1","97-2","97-1","96-2","96-1","older"] %>
    <%= f.label :推薦程度 %>
    <%= f.select :rate,:score => [ "5", "4", "3", "2", "1"] %>
    <%= f.input :score ,:label => '評分方式'%>
    <%= f.input :material, :label => '上課教材' %>
    <%= f.input :style, :label => '授課方式' %>
    <%= f.input :content, :label => '心得'%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
  </div>
<% end %>
